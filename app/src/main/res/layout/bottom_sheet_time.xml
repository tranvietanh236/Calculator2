<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- RadioGroup for unit selection -->
    <RadioGroup
        android:id="@+id/radio_group_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_minute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="H"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Week"
            android:padding="8dp"
            android:textSize="16sp" />
    </RadioGroup>
</LinearLayout>
