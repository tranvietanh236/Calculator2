<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- RadioGroup for unit selection -->
    <RadioGroup
        android:id="@+id/radio_group_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_metre_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M²"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_kilometre_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Km²"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_centimetre_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cm²"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_millimetre_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mm²"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_mile_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mile²"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_yard_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yard²"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_foot_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foot²"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_inch_squared"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inch²"
            android:padding="8dp"
            android:textSize="16sp" />
    </RadioGroup>
</LinearLayout>
