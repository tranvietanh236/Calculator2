<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- RadioGroup for unit selection -->
    <RadioGroup
        android:id="@+id/radio_group_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_meter_per_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M/s"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_kilometer_per_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Km/h)"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_mile_per_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mph"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_knot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kn"
            android:padding="8dp"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_feet_per_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ft/s"
            android:padding="8dp"
            android:textSize="16sp" />
    </RadioGroup>
</LinearLayout>
