<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn nút (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F47026" /> <!-- Màu nền khi chạm -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Trạng thái khi di chuột qua nút (hovered) -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#F47026" /> <!-- Màu nền khi di chuột -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F47026" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>